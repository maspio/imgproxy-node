{
  "compilerOptions": {
    "outDir": "./build",
    "strict": true,
    "sourceMap": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "noImplicitAny": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
